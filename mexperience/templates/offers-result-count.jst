<div class="row top-buffer loading">
    <h2 class="mk-blue">
        <% if (loading) { %> Fetching offers <% } %>
        <% if (offers.length === 0) { %> No offers found. <% } %>
        <% if (offers.length === 1) { %> 1 offer found. <% } %>
        <% if (offers.length > 1) { %> <%= offers.length %> offers found. <% } %>
    </h2>
</div>
